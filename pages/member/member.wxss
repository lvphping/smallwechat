@import "../../weui.wxss";
.header{
    background:url('http://bpqn.weloner.com/timg.jpg')  no-repeat;
    background-size:cover;
    height:180px;    
    filter: blur(2px);
    position:relative;
}
.header_img{
    border:1px solid white;
    position: absolute;
    z-index:10;
    top:15px;
    left:40%;
    padding:4px;
}
.header_img , .header_img image{
   width:150rpx;
   height:150rpx;
   border-radius:100%;  
}
.header_txt{
    position: absolute;
    z-index:10;
    top:115px;
    left:40%; 
    color:white;
    font-weight:bold;  
}
.header_net{
    position: absolute;
    z-index:10;
    top:0;
    right:8rpx; 
    color:white;
    font-weight:bold;  
}
#myVideo{
    width:100%;
}

.image {
  width: 100%;
  height: 360rpx;
}
.page-body-info {
  display: flex;
  box-sizing: border-box;
  padding: 30rpx;
  height: 420rpx;
  border-top: 1rpx solid #D9D9D9;
  border-bottom: 1rpx solid #D9D9D9;
  align-items: center;
  justify-content: center;
}
